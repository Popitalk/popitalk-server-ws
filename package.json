{
  "name": "server-ws",
  "version": "1.0.0",
  "description": "Popitalk WS Server",
  "main": "index.js",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development node ./src/index.js",
    "devserver": "cross-env NODE_ENV=development nodemon ./src/index.js",
    "production": "cross-env NODE_ENV=production node ./src/index.js",
    "prettier": "prettier \"./src/**/*.+(js|json|yml|yaml|ts|tsx|md|mdx|graphql)\"",
    "unprettified": "npm run prettier -- --list-different",
    "format": "npm run prettier -- --write",
    "lint": "eslint ./src/ -c ./.eslintrc --ext js",
    "fix": "eslint ./src/ --fix",
    "validate": "run-p lint unprettified"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/**/*.{js}": [
      "npm run format",
      "npm run fix",
      "git add"
    ]
  },
  "dependencies": {
    "bluebird": "^3.5.5",
    "dotenv": "^8.1.0",
    "ioredis": "^4.16.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.3",
    "@types/node": "^13.9.3",
    "cross-env": "^6.0.3",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.4.3",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1"
  }
}
